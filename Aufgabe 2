a)
SELECT Liga_Nr, Name
FROM Liga, Verein
WHERE Meister = V_Id AND Liga_Nr = 1;

b)
SELECT Sum(Tore_Heim+Tore_Gast) AS Tore
FROM Spiel, Verein, Liga
WHERE Spiel.[Heim]=[V_id]
GROUP BY Liga.Liga_nr;


c)
SELECT Name
FROM Verein
WHERE V_Id = (

SELECT Gast
FROM Spiel
WHERE Spieltag = 1 AND Heim =(SELECT V_Id FROM Verein WHERE Name = "Dynamo Dresden")

);

d)
SELECT Spieler_Name, Trikot_Nr, Land, Tore
FROM Spieler
WHERE Vereins_Id = (SELECT V_ID FROM Verein WHERE Name = "FC Bayern MÃ¼nchen");
